@page
@model PuppyYoga.Pages.Instructors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].Bio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InstructorData.Instructors) {
            string selectedRow = "";
            if(item.InstructorId == Model.InstructorId)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.InstructorId">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.InstructorId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InstructorId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InstructorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.InstructorData.YogaClasses != null)
{
    <h3>YogaClasses held by Selected Instructor</h3>
    <table class="table">
        <tbody>
            @foreach (var classItem in Model.InstructorData.YogaClasses)
            {
                <tr>
                    <td>
                        @classItem.ClassName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
