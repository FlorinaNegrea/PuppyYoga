@page "/"
@model PuppyYoga.Pages.YogaClasses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-action="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Class Name / Instructor Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter"/>
            <input type="submit" value="Search" class="btn btn-primary"/> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
 </form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ClassNameSort"
                   class="sorted-header">
                    @Html.DisplayNameFor(model => model.YogaClass[0].ClassName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YogaClass[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YogaClass[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YogaClass[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YogaClass[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YogaClass[0].MaxCapacity)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.InstructorSort"
                   class="sorted-header">
                    @Html.DisplayNameFor(model => model.YogaClass[0].Instructor.FullName)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.YogaClass) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacity)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Instructor.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.YogaClassID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.YogaClassID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.YogaClassID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
