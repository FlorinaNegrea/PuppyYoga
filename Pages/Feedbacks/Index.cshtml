@page
@model PuppyYoga.Pages.Feedbacks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].YogaClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YogaClass.YogaClassID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FeedbackId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FeedbackId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FeedbackId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
